<h1>Events#index</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
        <tr>
            <td>日付</td>
            <td><%= event.date %></td>
        </tr>
        <tr>
            <td>時間</td>
            <td><%= event.start_time %></td>
            <td><%= event.end_time %></td>
        </tr>
        <tr>
            <td>場所</td>
            <td><%= event.location%></dt>
        </tr>
        <tr>
            <td>メモ</td>
            <td><%= event.memo%></dt>
        </tr>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

